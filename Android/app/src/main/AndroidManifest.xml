<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.silktours.android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".Messages"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".CreateTour"
            android:label="@string/title_activity_create_tour"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".search"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Viewtour"
            android:label="@string/title_activity_viewtour"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JoinTour"
            android:label="@string/title_activity_join_tour"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyTours"
            android:label="@string/title_activity_my_tours"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MessageThreads"
            android:label="@string/title_activity_message_threads"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
