                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRatingTag"
                    android:textSize="@dimen/normal_text"
                    android:layout_margin="@dimen/text_margin"
                    android:gravity="start"
                    android:text="Reviews"
                    android:textColor="#000000"
                    android:layout_weight="1"/>

            </LinearLayout>
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_marginTop="20px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdditionalStayTag"
                    android:textSize="@dimen/normal_text"
                    android:layout_margin="@dimen/text_margin"
                    android:gravity="start"
                    android:text="Additional Services: Accomadation"
                    android:textColor="#000000"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdditionalStay"
                    android:textSize="@dimen/normal_text"
                    android:layout_margin="@dimen/text_margin"
                    android:gravity="start"
                    android:text="didn't load!!"
                    android:layout_weight="4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdditionalTravelTag"
                    android:textSize="@dimen/normal_text"
                    android:layout_margin="@dimen/text_margin"
                    android:gravity="start"
                    android:text="Additional Services: Travel"
                    android:textColor="#000000"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdditionalTravel"
                    android:textSize="@dimen/normal_text"
                    android:layout_margin="@dimen/text_margin"
                    android:gravity="start"
                    android:text="didn't load!!"
                    android:layout_weight="4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdditionalFoodTag"
                    android:textSize="@dimen/normal_text"
                    android:layout_margin="@dimen/text_margin"
                    android:gravity="start"
                    android:text="Additional Services: Food"
                    android:textColor="#000000"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtAdditionalFood"
                    android:textSize="@dimen/normal_text"
                    android:layout_margin="@dimen/text_margin"
                    android:gravity="start"
                    android:text="didn't load!!"
                    android:layout_weight="4"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>